{
  "name": "ImJoy.io",
  "version": "0.10.2",
  "private": true,
  "description": "ImJoy -- deep learning made easy.",
  "author": "Wei OUYANG <wei.ouyang@cri-paris.org>",
  "scripts": {
    "serve": "vue-cli-service serve --host 0.0.0.0",
    "build": "vue-cli-service build && npm run build-lib",
    "build-lib": "webpack --config webpack.library.js --mode development && webpack --config webpack.library.js --mode production",
    "test": "vue-cli-service test:unit",
    "check-format": "prettier --check \"{src,tests}/**/**\"",
    "format": "prettier --write \"{src,tests}/**/**\"",
    "lint": "vue-cli-service lint",
    "check": "prettier --check \"{src,tests}/**/**\" && vue-cli-service lint && vue-cli-service test:unit",
    "deploy": "DEPLOY_MODE=dev vue-cli-service build && node ./deploy-dev.js"
  },
  "dependencies": {
    "ajv": "^6.6.1",
    "axios": "^0.18.0",
    "browserfs": "^1.4.3",
    "dompurify": "^1.0.11",
    "file-saver": "^1.3.3",
    "glfx": "0.0.4",
    "html-webpack-plugin": "^2.30.1",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.10",
    "marked": "^0.6.3",
    "minibus": "^3.1.0",
    "module": "^1.2.5",
    "monaco-editor": "^0.15.6",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "pouchdb-browser": "^7.0.0",
    "register-service-worker": "^1.6.2",
    "spark-md5": "^3.0.0",
    "spectre.css": "^0.5.8",
    "vega": "^5.7.3",
    "vega-embed": "^6.0.0",
    "vega-lite": "^4.0.0-beta.10",
    "vue": "^2.5.17",
    "vue-form-generator": "^2.3.4",
    "vue-grid-layout": "github:jbaysolutions/vue-grid-layout#9e13ea9",
    "vue-material": "^1.0.0-beta-11",
    "vue-router": "^3.0.1",
    "xterm": "^3.13.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-eslint": "^3.1.5",
    "@vue/cli-plugin-pwa": "^3.6.0",
    "@vue/cli-plugin-unit-mocha": "^3.1.1",
    "@vue/cli-service": "^3.6.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "autoprefixer": "^7.1.2",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "chromedriver": "^2.38.2",
    "cname-webpack-plugin": "^1.0.3",
    "copy-webpack-plugin": "^4.6.0",
    "create-file-webpack": "^1.0.2",
    "cross-env": "^5.0.1",
    "cross-spawn": "^5.0.1",
    "css-loader": "^2.1.1",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "gh-pages": "^2.0.1",
    "mocha": "^5.0.5",
    "mocha-webpack": "^2.0.0-beta.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "postcss-url": "^7.2.1",
    "prettier": "1.17.0",
    "raw-loader": "^1.0.0",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^2.6.2",
    "uglify-es": "github:mishoo/UglifyJS2#harmony",
    "uglify-js": "^2.8.29",
    "url-loader": "^1.1.2",
    "vue-cli-plugin-unit-karma": "^0.5.0",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.0.0-beta.2",
    "webpack-cli": "^3.3.6"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off",
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
